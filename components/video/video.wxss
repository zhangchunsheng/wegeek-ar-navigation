.m-video {
  overflow: hidden;
  position: relative;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}
.m-video .cover {
  width: 100%;
  height: 352rpx;
  vertical-align: bottom;
}
.m-video::before {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 560rpx;
  height: 100%;
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
  background: linear-gradient(to right,rgba(0,0,0,.6) 0,rgba(0,0,0,0) 100%);
}
.m-video .info {
  color: #fff;
  padding: 0 30rpx;
  position: absolute;
  top:0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 1;
  box-sizing: border-box;
}
.m-video .info .h2 {
  font-size: 36rpx;
  font-weight: 600;
  line-height: 1.22;
  text-shadow: 2rpx 2rpx rgba(0,0,0,.4);
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  margin-top: 30rpx;
}
.m-video .detail {
  margin-top: 10rpx;
  padding-left: 18rpx;
  position: relative;
  font-size: 18rpx;
  line-height: 1;
  font-weight: bold;
  text-shadow: 2rpx 4rpx 0px rgba(0,0,0,0.20);
}
.m-video .detail view {
  margin-bottom: 6rpx;
}
.m-video .detail text {
  margin-right: 20rpx;
}
.m-video .detail .place {
  font-weight: normal;
  font-size: 16rpx;
}
.m-video .detail::before {
  content: '';
  width: 6rpx;
  height: 100%;
  border-right: 1rpx;
  background-color: #4ABDCC;
  position: absolute;
  left: 4rpx;
  top: 2rpx;
}
.m-video .user {
  position: absolute;
  width: 100%;
  left: 30rpx;
  bottom: 30rpx;
  line-height: 50rpx;
  font-size: 18rpx;
}
.m-video .avatar {
  width: 50rpx;
  height: 50rpx;
  float: left;
  margin-right: 15rpx;
  border-radius: 50rpx;
  vertical-align: bottom;
}
.m-video .bottom {
  position: absolute;
  bottom: 24rpx;
  font-size: 20rpx;
}

.m-video-s {
  color: #fff;
  overflow: hidden;
  position: relative;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}
.m-video-s .mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 222rpx;
  height: 240rpx;
  background-color: rgba(255, 255, 255, 0);
  background-image: linear-gradient(to right, rgba(0, 0, 0, .6), rgba(0, 0, 0, 0));
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
}
.m-video-s .cover {
  width: 100%;
  height: 240rpx;
  vertical-align: bottom;
  background-position: center center;
}
.m-video-s .info {
  position: absolute;
  left: 0;
  top: 0;
  margin: 20rpx 28rpx;
  text-shadow: 2rpx 3rpx rgba(0, 0, 0, .2);
}
.m-video-s .title {
  font-size: 36rpx;
  font-weight: bold;
  margin-left: -4rpx;
  line-height: 50rpx;
}
.m-video-s .detail {
  font-size: 20rpx;
  position: relative;
  height: 16rpx;
  line-height: 16rpx;
  padding-left: 16rpx;
  margin-top: 4rpx;
}
.m-video-s .detail::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 6rpx;
  height: 16rpx;
  background-color: #4abdcc;
}
.m-video-s .detail view {
  display: inline-block;
  margin-right: 16rpx;
}
.m-video-s .detail text {
  font-weight: bold;
}
.m-video-s .stat {
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 24rpx;
  height: 32rpx;
  line-height: 31rpx;
  font-size: 20rpx;
  padding-left: 28rpx;
  background-color: rgba(0, 0, 0, .4);
  z-index: 2;
}
.m-video-s .stat::before {
  content: '';
  width: 100%;
  position: absolute;
  height: 40rpx;
  left: 0;
  bottom: -4rpx;
  background-color: rgba(0, 0, 0, .4);
  z-index: -1;
}
.m-video-s .stat view {
  position: relative;
  display: inline-block;
  margin-right: 30rpx;
  padding-left: 16rpx;
}
.m-video-s .stat view::before {
  content: '';
  width: 8rpx;
  height: 8rpx;
  position: absolute;
  left: 0;
  top: 12rpx;
  background-color: #4abdcc;
  border-radius: 8rpx;
}
.m-video-s .stat text {
  font-weight: bold;
}
